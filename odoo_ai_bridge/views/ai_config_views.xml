<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ai_config_form" model="ir.ui.view">
        <field name="name">ai.config.form</field>
        <field name="model">ai.config</field>
        <field name="arch" type="xml">
            <form string="AI Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Connection">
                            <field name="ai_service_url"/>
                            <field name="webhook_secret" password="True"/>
                            <field name="enabled"/>
                            <field name="log_webhooks"/>
                        </group>
                        <group string="Enabled Modules">
                            <field name="enable_accounting"/>
                            <field name="enable_crm"/>
                            <field name="enable_sales"/>
                            <field name="enable_purchase"/>
                            <field name="enable_inventory"/>
                            <field name="enable_hr"/>
                            <field name="enable_project"/>
                            <field name="enable_helpdesk"/>
                            <field name="enable_manufacturing"/>
                            <field name="enable_marketing"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_config" model="ir.actions.act_window">
        <field name="name">AI Configuration</field>
        <field name="res_model">ai.config</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="res_id" ref="default_ai_config"/>
    </record>

    <menuitem
        id="menu_ai_config_root"
        name="AI Platform"
        web_icon="odoo_ai_bridge,static/description/icon.svg"
        sequence="100"
    />
    <menuitem
        id="menu_ai_config"
        name="Configuration"
        parent="menu_ai_config_root"
        action="action_ai_config"
        sequence="10"
    />
</odoo>
