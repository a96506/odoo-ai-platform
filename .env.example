# ============================================================
# Odoo AI Automation Platform — Environment Configuration
# ============================================================
# Copy this file:  cp .env.example .env
# Then edit .env with your actual values before deploying.
# ============================================================

# === Odoo Connection ===
# URL of your existing Odoo instance (reachable from Docker network)
ODOO_URL=http://odoo-web:8069
ODOO_DB=odoo
ODOO_USERNAME=admin
ODOO_PASSWORD=admin
# Optional: use API key instead of password (leave blank to use password)
ODOO_API_KEY=

# === Anthropic Claude API ===
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_MODEL=claude-sonnet-4-20250514

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === PostgreSQL (AI state database — separate from Odoo DB) ===
POSTGRES_DB=odoo_ai
POSTGRES_USER=odoo_ai
POSTGRES_PASSWORD=changeme-db-password
# This must match the POSTGRES_* vars above + the ai-db hostname from docker-compose
AI_DATABASE_URL=postgresql://odoo_ai:changeme-db-password@ai-db:5432/odoo_ai

# === AI Service ===
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8000
AI_SECRET_KEY=changeme-random-secret-32chars
WEBHOOK_SECRET=changeme-webhook-secret-32chars

# === Dashboard ===
DASHBOARD_PORT=3000
# Public URL the browser uses to reach the AI Service API
# In production, set this to your public domain/IP
NEXT_PUBLIC_API_URL=http://localhost:8000

# === Automation Thresholds ===
# Minimum confidence to act on (below this = logged only)
DEFAULT_CONFIDENCE_THRESHOLD=0.85
# Above this threshold, actions auto-execute without human approval
AUTO_APPROVE_THRESHOLD=0.95

# === Logging ===
LOG_LEVEL=INFO
